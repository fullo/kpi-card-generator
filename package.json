{
  "name": "kpi-card-generator",
  "version": "2.0.0",
  "description": "Generatore di carte da gioco per workshop KPI",
  "main": "kpi-card-generator.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:modes": "cd tests/scripts && ./test-modalita.sh",
    "generate": "node kpi-card-generator.js",
    "clean": "rm -rf node_modules package-lock.json",
    "clean:test": "rm -rf tests/output/*.pdf tests/output/*.html",
    "reinstall": "npm run clean && npm install",
    "organize": "bash organize-tests.sh"
  },
  "keywords": [
    "kpi",
    "cards",
    "generator",
    "workshop",
    "training"
  ],
  "author": "Francesco Fullone",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "puppeteer": "^23.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "overrides": {
    "glob": "^10.3.10",
    "inflight": "npm:@isaacs/inflight@^1.0.1",
    "rimraf": "^5.0.5"
  }
}